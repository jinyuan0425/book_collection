<table summary="Book form fields">
  <tr>
    <th>Title</th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th>Author</th>
    <td><%= f.text_field :author %></td>
  </tr>
  <tr>
    <th>Price</th>
    <td><%= f.number_field :price, step: 0.01 %></td>
  </tr>
  <tr>
    <th>Published Date</th>
    <td>
      <%= f.date_select :published_date, start_year: 1900, end_year: Time.now.year %>
    </td>
  </tr>
</table>
